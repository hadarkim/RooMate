<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_tasks">


    <!-- מטלות -->
    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.roomate.ui.tasks.TasksFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasks">

        <action
            android:id="@+id/action_tasksFragment_to_createTaskFragment"
            app:destination="@id/createTaskFragment"/>
    </fragment>


    <!-- קניות -->
    <fragment
        android:id="@+id/shoppingFragment"
        android:name="com.example.roomate.ui.shopping.ShoppingListFragment"
        android:label="@string/title_shopping" >
    </fragment>

    <!-- סטטיסטיקה -->
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.yourpackage.roomate.ui.stats.StatisticsFragment"
        android:label="@string/title_stats" >
    </fragment>

    <!-- פרופיל -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.yourpackage.roomate.ui.profile.UserProfileFragment"
        android:label="@string/title_profile" >
    </fragment>

    <fragment
        android:id="@+id/createTaskFragment"
        android:name="com.example.roomate.ui.tasks.CreateTaskFragment"
        android:label="הוסף מטלה"
        tools:layout="@layout/fragment_create_task" />




</navigation>
