<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_group.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_group_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- שורה עליונה: שם המשתמש המחובר ו-ImageView סטטי (אייקון) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- TextView להצגת שם המשתמש -->
        <TextView
            android:id="@+id/tvCurrentUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <!-- ImageView סטטי לצורכי עיצוב בלבד (אפשר להסיר אם אין צורך) -->
        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/profile_avatar"
            android:layout_marginStart="8dp"
            android:visibility="visible" />
    </LinearLayout>

    <!-- שם הקבוצה -->
    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="24dp"
        android:text="" />

    <!-- כותרת "חברי קבוצה" -->
    <TextView
        android:id="@+id/tvMembersHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="חברי קבוצה"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView להצגת רשימת החברים -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMembers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- אופציונלי: TextView למצב שאין חברים (אם תרצה להציג במידה שהרשימה ריקה) -->
    <TextView
        android:id="@+id/tvEmptyMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אין חברים להצגה"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
