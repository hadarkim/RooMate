<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כותרת עמוד ההגדרות -->
        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:text="הגדרות" />

        <!-- ImageView לתמונת ברירת מחדל של פרופיל -->
        <ImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/profile_avatar"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- הצגת השם -->
        <TextView
            android:id="@+id/tvSettingsNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvSettingsNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- הצגת האימייל -->
        <TextView
            android:id="@+id/tvSettingsEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אימייל:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvSettingsEmailValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- מתגים להגדרות התראות -->
        <Switch
            android:id="@+id/btnRequestExactAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" הפעל תזכורות מדויקות "
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/btnRequestNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" הפעל התראות "
            android:layout_marginBottom="24dp" />

        <!-- לחצן עזיבת קבוצה -->
        <Button
            android:id="@+id/btnLeaveGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עזוב קבוצה"
            android:layout_marginBottom="16dp" />

        <!-- לחצן התנתקות -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="התנתק" />

    </LinearLayout>
</ScrollView>
