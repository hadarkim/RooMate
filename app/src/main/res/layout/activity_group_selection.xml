<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Toolbar מותאם -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- 2) שדה חיפוש -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="חפש קבוצה לפי שם"
        android:layout_margin="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 3) RecyclerView עם משקל כדי למלא את רוב המסך -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- 4) כפתור יצירת קבוצה -->
    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="צור קבוצה חדשה"
        android:layout_margin="16dp"/>

    <!-- 5) Spacer דוחף את השורה התחתונה לתחתית -->

    <!-- 6) שורה תחתונה: כפתור התנתקות + לוגו -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnLogoutGroupSel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התנתק"/>

        <!-- ממריץ בין הכפתור ללוגו -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivLogoBottom"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_logo"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>

</LinearLayout>
