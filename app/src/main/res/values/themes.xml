<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Use a MaterialComponents theme (descends from AppCompat) -->
    <style name="Theme.RooMate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- primary / secondary colors defined in res/values/colors.xml -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <!-- optional: status-bar color -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <!-- make status icons light (false = light icons on dark status bar) -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
